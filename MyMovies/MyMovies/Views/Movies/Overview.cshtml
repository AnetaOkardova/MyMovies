@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers

@model List<MyMovies.ViewModels.MovieOverviewModel>
@*@{
        Layout = null;
    }*@
@{
    ViewBag.Title = "Overview";
}


<div class="row">
    @foreach (var movie in Model)
    {
        <div class="col-md-3">
            <div class="card" style="width: 18rem;">
                <img style="width: 100%; height: 300px" src="@movie.ImageURL" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title">@movie.Title</h5>
                    <p class="card-text">Genre: @movie.Genre/Duration: @movie.Duration</p>
                    <p>Views: @movie.Views</p>
                    <a asp-controller="Movies" asp-action="Details" asp-route-id="@movie.Id" class="btn btn-primary">See description</a>
                </div>
            </div>
        </div>
    }
</div>

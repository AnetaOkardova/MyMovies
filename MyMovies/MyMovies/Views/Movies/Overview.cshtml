@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers

@model MyMovies.ViewModels.MovieOverviewDataModel

@{
    ViewBag.Title = "Overview";
}
@section Styles{
    <style>
        .movieDescription {
            overflow: hidden;
            width: 16rem;
            display: -webkit-box;
            -webkit-line-clamp: 3;
            -webkit-box-orient: vertical;
        }
    </style>
}
<div class="row">
    <div class="col-9">
        <div class="row justify-content-between">
            @foreach (var movie in Model.OverviewMovies)
            {
                <div class="col m-2">
                    <div class="card" style="width: 18rem; height:35rem">
                        <img style="width: 100%; height: 300px" src="@movie.ImageURL" class="card-img-top" alt="...">
                        <div class="card-body">
                            <h5 class="card-title">@movie.Title</h5>
                            <p class="card-text">Genre: @movie.Genre/Duration: @movie.Duration</p>
                            <p>Views: @movie.Views</p>
                            <div class="card-text movieDescription">@movie.Description</div>
                            <a asp-controller="Movies" asp-action="Details" asp-route-id="@movie.Id" class="btn btn-primary">See description</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
    <div class="col-3 p-2">
        <div class="m-1">
            <h2>Top 5 movies</h2>
            @foreach (var movie in Model.SidebarData.TopMovies)
            {
                <div class="p-1 shadow">
                    <a href="/Movies/Details/@movie.Id"><h3>@movie.Title</h3></a>
                    <p>Views: @movie.Views</p>
                </div>
            }
        </div>
        <div class="m-1">
            <h2>Most recent movies</h2>
            @foreach (var movie in Model.SidebarData.MostRecentMovies)
            {
                <div class="p-1 shadow">
                    <a href="/Movies/Details/@movie.Id"><h3>@movie.Title</h3></a>
                    <p>Views: @movie.Views</p>
                </div>
            }
        </div>

    </div>

</div>


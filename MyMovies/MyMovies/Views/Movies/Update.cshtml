@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers
@model MyMovies.ViewModels.UpdateMovieModel

@{
    ViewBag.Title = "Update";
}

<form asp-controller="Movies" asp-action="Update" method="post" onsubmit="return validateForm()" style="width: 80%">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label class="control-label" asp-for="Title">Title</label>
        <input type="text" asp-for="Title" class="form-control" required />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label class="control-label" asp-for="Genre">Genre</label>
        <input type="text" asp-for="Genre" class="form-control" required />
        <span asp-validation-for="Genre" class="text-danger"></span>

    </div>
    <div class="form-group">
        <label class="control-label" asp-for="Description">Description</label>
        <textarea type="text" asp-for="Description" class="form-control" cols="20" rows="10" required></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label class="control-label" asp-for="Duration">Duration</label>
        <input type="number" asp-for="Duration" class="form-control" required />
        <span asp-validation-for="Duration" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label class="control-label" asp-for="ImageURL">ImageURL</label>
        <input type="text" asp-for="ImageURL" class="form-control" required />
        <span asp-validation-for="ImageURL" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
</form>
@section Scripts{
    <script src="~/js/RequiredDataValidator.js"></script>
}


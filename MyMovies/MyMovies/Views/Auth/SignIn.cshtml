@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers
@model MyMovies.ViewModels.SignInModel

@{
    ViewBag.Title = "SignIn";
    Layout = null;
}

@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-success m-3" role="alert" style="width:800px">
        @ViewBag.ErrorMessage
    </div>
}

<form asp-controller="Auth" asp-action="SignIn" method="post" style="width: 80%">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <input type="text" asp-for="Username" class="form-control p-2 mt-5" placeholder="Username" />
        <span asp-validation-for="Username" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="password" asp-for="Password" class="form-control p-2 mt-2" placeholder="Password" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Sign In" class="btn btn-primary" />
    </div>
</form>